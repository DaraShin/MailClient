<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mail_service_list">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="filter_button">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="backgroundTint">@color/green1</item>
        <item name="android:textColor">@color/green10</item>
        <item name="cornerRadius">12dp</item>
        <item name="icon">@drawable/more_icon</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/green10</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="floating_action_button" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/green6</item>
        <item name="rippleColor">@color/green1</item>
    </style>

    <style name="floating_action_button_no_elevation" parent="floating_action_button">
        <item name="elevation">0dp</item>
    </style>

    <style name="transparent_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/green1</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MailClientCourseProject.MyNoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_vertical_sequence">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/green1</item>
    </style>

</resources>